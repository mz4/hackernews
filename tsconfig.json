{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "./src/", "./node_modules/", "./build/"
  ]
}